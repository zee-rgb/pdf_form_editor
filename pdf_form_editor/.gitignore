*.log
*.tmp
*.temp

# Ignore gem files
*.gem
.bundle/
vendor/bundle/
vendor/cache/

# Ignore documentation
/doc/
/rdoc/
/.yardoc
/yard/

# Ignore backup files
*~
*.bak
*.backup
*.orig

# Ignore database configuration (sensitive)
/config/database.yml.production
/config/database.yml.staging

# Ignore secrets and credentials
/config/secrets.yml
/config/application.yml
/config/settings.local.yml
/config/settings/*.local.yml
/config/environments/*.local.yml

# Supabase credentials
.env.supabase
supabase/.env
/config/supabase.yml

# Ignore deployment files
/config/deploy/*
/config/deploy.rb
.capistrano/
/config/deploy/
/shared/
/releases/

# Render specific
.render-buildpacks.json
/render.yaml.local
/render.production.yaml
.env.render

# Ignore Docker files (future use)
/.dockerignore
/docker-compose.override.yml
/docker-compose.*.yml

# Ignore Kamal deployment secrets
/.kamal/secrets*
!/kamal/secrets-sample

# Ignore system test artifacts
/tmp/system_test_screenshots/

# Ignore Terraform files (future infrastructure)
*.tfstate
*.tfstate.*
.terraform/
.terraform.lock.hcl

# Ignore Kubernetes secrets (future deployment)
k8s/*secret*
k8s/*Secret*

# ClaudeOnRails
.claude-on-rails/sessions/
.claude-swarm/
claude-swarm.log

# Ignore package-lock and similar (prefer yarn.lock)
package-lock.json
npm-debug.log*

# Ignore profiling and memory dumps
/tmp/memory_profiler/
/tmp/ruby-prof/

# Ignore SSL certificates
*.pem
*.crt
*.key
