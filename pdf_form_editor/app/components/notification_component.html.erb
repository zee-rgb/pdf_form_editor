<div class="notification notification-<%= @type %>" 
     x-data="{ show: true }" 
     x-show="show"
     x-transition:enter="transition transform duration-300"
     x-transition:enter-start="opacity-0 translate-x-40"
     x-transition:enter-end="opacity-100 translate-x-0"
     x-transition:leave="transition transform duration-300"
     x-transition:leave-start="opacity-100 translate-x-0"
     x-transition:leave-end="opacity-0 translate-x-40"
     <%= @auto_hide ? "x-init=\"setTimeout(() => { show = false }, #{@duration})\"" : "" %>
     style="position: relative; padding: 12px 16px; margin-bottom: 10px; border-radius: 4px; box-shadow: 0 2px 5px rgba(0,0,0,0.2); font-weight: 500;">
     
  <% color = case @type 
    when "success" then "#10B981"
    when "error" then "#EF4444"
    when "warning" then "#F59E0B"
    else "#3B82F6" # info
    end %>
  
  <div style="background-color: <%= color %>; color: white; padding: 0.5rem; border-radius: 3px;">
    <%= safe_message %>
  </div>
  
  <button @click="show = false" class="absolute top-2 right-2 text-white hover:text-gray-200">
    &times;
  </button>
</div>
