<div class="bg-gray-50 min-h-screen">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-3xl mx-auto">
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h1 class="text-2xl font-bold text-gray-900 mb-2">Upload PDF</h1>
          <p class="text-gray-600 mb-6">Upload a PDF form that you need to fill out. We'll make it editable so you can add text and signatures.</p>

          <%= form_with model: @pdf_document, local: true, multipart: true, class: "space-y-6" do |form| %>
            <% if @pdf_document.errors.any? %>
              <div class="bg-red-50 border border-red-200 rounded-md p-4">
                <div class="flex">
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      <%= pluralize(@pdf_document.errors.count, "error") %> prohibited this PDF from being saved:
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc pl-5 space-y-1">
                        <% @pdf_document.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <div>
              <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :title,
                  placeholder: "Enter a name for this document",
                  class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div>
              <%= form.label :pdf_file, "PDF File", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-gray-400 transition-colors" id="upload-box">
                <div class="space-y-1 text-center" id="upload-default">
                  <svg class="mx-auto h-12 w-12 text-gray-400" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M7.25 10.25a.75.75 0 0 0 1.5 0V4.56l1.22 1.22a.75.75 0 1 0 1.06-1.06l-2.5-2.5a.75.75 0 0 0-1.06 0l-2.5 2.5a.75.75 0 0 0 1.06 1.06L7.25 4.56v5.69Z"/>
                    <path d="M3.5 9.75a.75.75 0 0 0-1.5 0v1.5A2.75 2.75 0 0 0 4.75 14h6.5A2.75 2.75 0 0 0 14 11.25v-1.5a.75.75 0 0 0-1.5 0v1.5c0 .69-.56 1.25-1.25 1.25h-6.5c-.69 0-1.25-.56-1.25-1.25v-1.5Z"/>
                  </svg>
                  <div class="flex text-sm text-gray-600">
                    <label for="pdf_document_pdf_file" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                      <span>Upload a PDF file</span>
                      <%= form.file_field :pdf_file, accept: ".pdf", class: "sr-only", onchange: "showFileDetails(this)" %>
                    </label>
                    <p class="pl-1">or drag and drop</p>
                  </div>
                  <p class="text-xs text-gray-500">
                    PDF files up to 10MB
                  </p>
                </div>
                
                <!-- This is shown when a file is selected -->
                <div id="upload-selected" class="hidden w-full">
                  <div class="bg-green-50 rounded-md p-4 border border-green-200 flex items-center">
                    <svg class="h-10 w-10 text-green-500 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div>
                      <h4 class="text-green-800 font-medium">PDF Selected</h4>
                      <p class="text-green-700 text-sm" id="file-name"></p>
                      <p class="text-green-700 text-xs" id="file-size"></p>
                    </div>
                  </div>
                  <button type="button" class="mt-2 text-sm text-gray-600 hover:text-gray-900" onclick="resetFileInput()">Change file</button>
                </div>
              </div>
            </div>
            
            <script>
              // Initialize file display if there's an error but file was selected
              document.addEventListener('DOMContentLoaded', function() {
                // Check if we have form errors but file is already selected (via hidden field)
                const hasErrors = document.querySelector('.bg-red-50');
                const fileInput = document.querySelector('#pdf_document_pdf_file');
                
                if (fileInput.files && fileInput.files[0]) {
                  showFileDetails(fileInput);
                }
              });
              
              function showFileDetails(input) {
                if (input.files && input.files[0]) {
                  const fileName = input.files[0].name;
                  const fileSize = (input.files[0].size / 1024 / 1024).toFixed(2) + ' MB';
                  
                  document.getElementById('file-name').textContent = fileName;
                  document.getElementById('file-size').textContent = fileSize;
                  document.getElementById('upload-default').classList.add('hidden');
                  document.getElementById('upload-selected').classList.remove('hidden');
                  document.getElementById('upload-box').classList.add('border-green-300', 'bg-green-50');
                  document.getElementById('upload-box').classList.remove('border-gray-300');
                  
                  // Store the file info in local storage in case we need to validate the form
                  sessionStorage.setItem('selected_pdf_name', fileName);
                  sessionStorage.setItem('selected_pdf_size', fileSize);
                }
              }
              
              function resetFileInput() {
                const input = document.querySelector('#pdf_document_pdf_file');
                input.value = '';
                document.getElementById('upload-default').classList.remove('hidden');
                document.getElementById('upload-selected').classList.add('hidden');
                document.getElementById('upload-box').classList.remove('border-green-300', 'bg-green-50');
                document.getElementById('upload-box').classList.add('border-gray-300');
                
                // Clear stored file info
                sessionStorage.removeItem('selected_pdf_name');
                sessionStorage.removeItem('selected_pdf_size');
              }
            </script>

            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 flex justify-between items-center">
              <%= link_to "Cancel", pdf_documents_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              <%= form.submit "Upload & Start Editing", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
