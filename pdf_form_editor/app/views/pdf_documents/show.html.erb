<div class="bg-white min-h-screen p-4">
  <!-- Header -->
  <div class="border-b bg-white px-4 py-3 mb-4 flex items-center justify-between">
    <div>
      <h1 class="text-xl font-semibold text-gray-900"><%= @pdf_document.title %></h1>
      <p class="text-sm text-gray-500">View your PDF below</p>
    </div>
    <div class="flex items-center space-x-2">
      <%= link_to "Back to PDFs", pdf_documents_path, class: "px-3 py-2 text-sm text-gray-600 hover:text-gray-900" %>
      <%= link_to "Edit PDF", edit_pdf_document_path(@pdf_document), class: "px-3 py-2 text-sm bg-green-600 text-white rounded hover:bg-green-700" %>
      <%= link_to "Download PDF", download_pdf_document_path(@pdf_document), class: "px-3 py-2 text-sm bg-blue-600 text-white rounded hover:bg-blue-700" %>
    </div>
  </div>

  <% if @pdf_document.pdf_file.attached? %>
    <div class="border rounded p-2 bg-white">
      <embed 
        src="<%= url_for(@pdf_document.pdf_file) %>" 
        type="application/pdf"
        width="100%" 
        height="800px"
        class="w-full">
    </div>
  <% else %>
    <div class="p-4 bg-red-50 text-red-700 rounded border">
      No PDF file is attached to this document.
    </div>
  <% end %>
</div>
