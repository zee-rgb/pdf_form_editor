<%# HTML-only PDF viewer with <embed> tag - no JavaScript required %>
<div class="bg-white rounded-lg shadow p-4">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-xl font-bold"><%= @pdf_document.title %></h1>
    <div class="flex space-x-4">
      <%= link_to "Back to PDFs", pdf_documents_path, class: "text-blue-600 hover:underline" %>
      <%= link_to "Download", download_pdf_document_path(@pdf_document), class: "bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700" %>
    </div>
  </div>

  <% if @pdf_document.pdf_file.attached? %>
    <div class="border rounded-lg p-2">
      <embed 
        src="<%= url_for(@pdf_document.pdf_file) %>" 
        type="application/pdf"
        width="100%" 
        height="600px"
        class="w-full">
      
      <div class="mt-2 text-center text-sm text-gray-500">
        If the PDF doesn't display above, you can <%= link_to "download it", download_pdf_document_path(@pdf_document), class: "text-blue-600 hover:underline" %> directly.
      </div>
    </div>
  <% else %>
    <div class="p-4 bg-red-50 text-red-700 rounded-lg">
      No PDF file is attached to this document.
    </div>
  <% end %>
</div>
