<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= content_for(:title) || "PDF Form Editor" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="icon" href="/icon.png" type="image/png">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <!-- daisyUI -->
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/daisyui@5/themes.css" rel="stylesheet" type="text/css" />

    <!-- HTMX for better interactivity -->
    <script src="https://unpkg.com/htmx.org@1.9.6" integrity="sha384-FhXw7b6AlE/jyjlZH5iHa/tTe9EpJ1Y55RjcgPbjeWMskSxZt1v9qkxLJWNJaGni" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/htmx.org/dist/ext/json-enc.js"></script>

    <!-- jQuery for easier DOM manipulation -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js" integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script>

    <%= javascript_importmap_tags %>

    <!-- Fonts for typed signature -->
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&family=Great+Vibes&family=Allura&display=swap" rel="stylesheet">
  </head>

  <body class="min-h-screen bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white border-b shadow-sm">
      <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex">
            <div class="flex items-center flex-shrink-0">
              <%= link_to "PDF Form Editor", root_path, class: "text-xl font-semibold text-gray-900" %>
            </div>
            <div class="flex ml-6 space-x-8">
              <%= link_to "My PDFs", pdf_documents_path, class: "border-transparent text-gray-600 hover:text-gray-900 inline-flex items-center px-1 pt-1 text-sm font-medium" %>
            </div>
          </div>
          <div class="flex items-center ml-6">
            <% if user_signed_in? %>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-ghost" %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary text-white" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%= turbo_frame_tag "flash_messages" do %>
      <%= render "shared/flash_messages" %>
    <% end %>

    <!-- Global notification function -->
    <script type="text/javascript">
      document.addEventListener('turbo:load', function() {
        window.showNotification = function(message, type = 'info') {
          const container = document.getElementById('flash_messages');
          if (!container) return;

          const notification = document.createElement('div');
          notification.className = `notification notification-${type}`;
          notification.textContent = message;

          // Clear existing messages and add the new one
          while (container.firstChild) {
            container.removeChild(container.firstChild);
          }
          container.appendChild(notification);

          // Auto-dismiss
          setTimeout(() => {
            notification.style.transition = 'opacity 0.5s ease';
            notification.style.opacity = '0';
            setTimeout(() => { notification.remove(); }, 500);
          }, 3000);
        }
      });
    </script>

    <!-- Main content -->
    <% full_width = content_for?(:full_width) %>
    <main class="<%= full_width ? 'w-full' : 'max-w-7xl mx-auto px-4 sm:px-6 lg:px-8' %> py-6">
      <%= yield %>
    </main>
  </body>
</html>
